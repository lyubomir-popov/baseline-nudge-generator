{
  "name": "@lyubomir-popov/baseline-nudge-generator",
  "version": "1.0.1",
  "description": "Automatic font metrics reader that generates baseline grid nudges for CSS typography systems",
  "main": "src/index.js",
  "bin": {
    "baseline-nudges": "bin/baseline-nudges.js"
  },
  "files": [
    "src/",
    "bin/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "node bin/baseline-nudges.js",
    "dev": "npm run ensure-font && concurrently \"npm run serve\" \"npm run watch\"",
    "watch": "node bin/baseline-nudges.js watch examples/typography-config.json",
    "serve": "cd examples && python3 -m http.server 8001",
    "ensure-font": "node scripts/download-inter.js",
    "build": "echo 'No build step needed'",
    "test": "echo 'No tests yet'",
    "prepublishOnly": "npm run build",
    "postinstall": "npm run ensure-font"
  },
  "keywords": [
    "typography",
    "baseline-grid",
    "css",
    "font-metrics",
    "nudges",
    "design-system",
    "sass",
    "scss"
  ],
  "author": "Lyubomir Popov",
  "license": "MIT",
  "dependencies": {
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.2",
    "opentype.js": "^1.3.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lyubomir-popov/baseline-nudge-generator.git"
  },
  "bugs": {
    "url": "https://github.com/lyubomir-popov/baseline-nudge-generator/issues"
  },
  "homepage": "https://github.com/lyubomir-popov/baseline-nudge-generator#readme",
  "devDependencies": {
    "@fontsource/inter": "^5.2.6"
  }
}
